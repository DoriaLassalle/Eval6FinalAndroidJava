<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MultaActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="177dp"
        android:text="Calcule el monto de su multa:"
        android:textColor="#567059"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomuni" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="177dp"
        android:text="Dirección de Tránsito"
        android:textColor="#567059"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Multa a Pagar :"
            android:textColor="#567059"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/aPagar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0.00"
            android:textColor="#567059"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="85dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="456dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/segboton_round"
            android:text="volver" />

        <Button
            android:id="@+id/calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/segboton_round"
            android:text="calcular" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/segboton_round"
            android:text="Limpiar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUELDO BASE :"
            android:textColor="#567059"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/sueldo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Sólo numeros"
            android:inputType="number"
            android:textColor="#567059"
            android:textColorHint="#BFD6C1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RUT :"
            android:textColor="#567059"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/rut"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ej. 11111111-1"
            android:inputType="textPersonName"
            android:textColor="#567059"
            android:textColorHint="#BFD6C1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NOMBRE :"
            android:textColor="#567059"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nombre y apellido"
            android:inputType="textPersonName"
            android:textColor="#567059"
            android:textColorHint="#BFD6C1"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>